generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
   moduleFormat = "esm" 
}

datasource db {
  provider = "postgresql"
}

model Hotel {
  id             Int       @id @default(autoincrement())
  title          String
  desc           String
  title_fr       String
  desc_fr        String
  address        String
  city           String
  country        String
  price_per_night Float
  total_price    Float?     // optional, only for mobile-home
  currency       String
  rating         Float?     // optional
  review_count   Int?       // optional
  amenities      Json       // store array of strings as JSON
  check_in       String
  check_out      String
  notes          String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
